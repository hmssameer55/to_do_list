<%- include ('header.ejs') %>

<div class="box" id="heading">        
        <h1>  <%= title %> !!!  </h1>    
</div>

    <div class="box">
        <% newItem.forEach((item)=>{     %>
        <form action="/delete" method="post">  
            <div class="item">   
                <input type="checkbox" name="checkbox">   
                <p> <%= item.name  %></p>
                <button class="dlt" name="dltbtn" value="<%=item._id%>" onchange="this.form.submit()"><i class="fas fa-trash fa-sm"></i> </button>             
            </div>
        </form>
         <% })                                 %>
           
        
    <form class="item" action="<%= route%>" method="post" >
        <input type="text" name="newItem" placeholder="Add new item" autocomplete="off">
        <button type="submit" > + </button>
    </form>

</div>
   
<%- include ('footer.ejs') %>